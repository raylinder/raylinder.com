<MudAppBar Elevation="1">
    <MudIconButton Icon="@Icons.Material.Filled.Menu" Color="Color.Inherit" Edge="Edge.Start" OnClick="@ToggleDrawer" />
    <MudImage Src="images/icon.png" Width="32" Height="32" Alt="Ray Linder. Relentless. Results." Elevation="0" Class="me-4" />
    <MudText Typo="@Typo.body1">Ray Linder. Relentless. Results.</MudText>
    <MudSpacer />
</MudAppBar>
<MudDrawer @bind-Open="@_open" ClipMode="@DrawerClipMode.Always" Elevation="1" Anchor="Anchor.Start" Variant="@DrawerVariant.Temporary">
    <MudNavMenu Margin="Margin.Normal">
        <MudNavLink Match="@NavLinkMatch.All" Icon="@Icons.Material.Filled.Home" Href="/"><div class="py-2">Home</div></MudNavLink>
        <MudNavLink Match="@NavLinkMatch.All" Icon="@Icons.Material.Filled.Person" Href="/About"><div class="py-2">About</div></MudNavLink>
        <MudNavLink Match="@NavLinkMatch.All" Icon="@Icons.Material.Filled.WorkHistory" Href="/Experience"><div class="py-2">Experience</div></MudNavLink>
        <MudNavLink Match="@NavLinkMatch.All" Icon="@Icons.Material.Filled.FeaturedPlayList" Href="/FeaturedWork"><div class="py-2">Featured Work</div></MudNavLink>
        <MudNavLink Match="@NavLinkMatch.All" Icon="@Icons.Material.Filled.SnippetFolder" Href="/PetProjects"><div class="py-2">Pet Projects</div></MudNavLink>
    </MudNavMenu>
</MudDrawer>

